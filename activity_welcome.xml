<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background5"
    tools:context="com.pajhama.svnitnme.svnitandme.WELCOME">
        <VideoView
            android:id="@+id/SLIDESHOW"
            android:layout_width="wrap_content"
            android:layout_height="137dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="0dp" />

        <Button
            android:id="@+id/HMCLOGIN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:text="HMC LOGIN"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/kursv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/SLIDESHOW"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="13dp"
            android:backgroundTint="@color/colorAccent"
            android:backgroundTintMode="screen"
            android:contentDescription="TODO"
            android:src="@mipmap/svnit"
            tools:layout_editor_absoluteX="364dp"
            tools:layout_editor_absoluteY="312dp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/kursv"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="14dp"
            android:text="KNOW YOUR SVNIT"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textStyle="bold|italic" />

        <ImageView
            android:id="@+id/gjcmpl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/textView3"
            android:layout_below="@+id/textView"
            android:layout_marginEnd="14dp"
            android:layout_marginTop="39dp"
            android:src="@mipmap/girl" />

        <ImageView
            android:id="@+id/mtbcmpl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textView"
            android:layout_alignTop="@+id/gjcmpl"
            android:layout_marginStart="25dp"
            android:src="@mipmap/boy" />

        <TextView
            android:id="@+id/editText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/editText2"
            android:layout_alignBottom="@+id/editText2"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="18dp"
            android:ems="10"
            android:text="HI BOYS! I AM HERE TO LISTEN TO YOU"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="12sp"
            android:textStyle="bold"
            tools:textColor="@color/colorPrimaryDark" />

        <TextView
            android:id="@+id/editText2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/mtbcmpl"
            android:layout_marginStart="27dp"
            android:layout_marginTop="19dp"
            android:ems="10"
            android:inputType="textMultiLine"
            android:text="HELLO GIRLS, NEED HELP!!"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="12sp"
            android:textStyle="bold"
            tools:textColor="@color/colorPrimaryDark" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:text="DEVELOPED AND CREATED BY PaJhaMa" />
 </RelativeLayout>


